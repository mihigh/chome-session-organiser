{
    "name": "Chome Session Organiser",
    "description": "Manage multiple Chrome sessions",
    "icons": {
        "48": "images/icon_72.png"
    },
    "version": "0.1",
    "permissions": [
        "tabs"
    ],
    "background": {
        "persistent": false,
        "scripts": [
            "javascript/background.js"
        ]
    },
    "browser_action": {
        "default_title": "Switch session",
        "default_popup": "views/popup.html"
    },
    "manifest_version": 2
}
