{
    "name": "Chome workspace Organiser",
    "description": "Manage multiple Chrome workspaces",
    "icons": {
        "48": "img/icon_72.png"
    },
    "version": "0.1",
    "permissions": [
        "tabs"
    ],
    "background": {
        "persistent": false,
        "scripts": [
            "js/background.js"
        ]
    },
    "browser_action": {
        "default_title": "Switch workspace",
        "default_popup": "popup.html"
    },
    "manifest_version": 2
}
