{
    "name": "Chome Workspace Organiser",
    "description": "Manage multiple Chrome workspaces",
    "short_name": "This extension will help organizing your windows and tabs on what categories.",
    "icons": {
        "48": "img/icon_72.png",
        "128": "img/icon_128.png"
    },
    "version": "0.1",
    "permissions": [
        "tabs",
        "storage"
    ],
    "background": {
        "persistent": false,
        "scripts": [
            "js/background.js"
        ]
    },
    "browser_action": {
        "default_title": "Switch workspace",
        "default_popup": "popup.html"
    },
    "manifest_version": 2
}
